<div class="form-section">
<h2>Create a Post</h2>
<%= form_with model: new_post, url: user_post_index_path(user), 
	method: :post, local: true, class: 'post-form' do |form| %>
  <div class="title-container flex-row">
		<%=form.label :title, "Title: "%>
		<%= form.text_field :title%>
	</div>
	<div class="text-container flex-row">
		<%= form.label :text, "Text: "%>
		<%= form.text_area :text, row: 5, cols: 50%>
	</div>
	<%= form.submit 'submit'%>
<% end %>
</div>
